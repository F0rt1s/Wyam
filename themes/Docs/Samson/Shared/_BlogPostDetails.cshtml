@model IDocument

<dl class="dl-horizontal">
    <dt><i class="fa fa-calendar"></i> Date</dt>
    <dd>@(Model.Get<DateTime>(DocsKeys.Date).ToLongDateString())</dd>
    @if(Model.ContainsKey(DocsKeys.Category))
    {
        string link = Model.String(DocsKeys.Category).ToLower().Replace(" ", "-").Replace("'", string.Empty);
        <dt><i class="fa fa-bookmark"></i> Category</dt>
        <dd><a href="/blog/@(link)">@(Model.String(DocsKeys.Category))</a></dd>
    }    
    @if(Model.ContainsKey(DocsKeys.Author))
    {
        string link = Model.String(DocsKeys.Author).ToLower().Replace(" ", "-").Replace("'", string.Empty);
        <dt><i class="fa fa-user"></i> Author</dt>
        <dd><a href="/blog/author/@(link)">@(Model.String(DocsKeys.Author))</a></dd>
    }  
</dl>